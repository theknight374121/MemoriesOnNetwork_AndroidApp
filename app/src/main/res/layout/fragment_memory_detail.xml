<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:id="@+id/fragment_memory_detail">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:id="@+id/moviedetail_txtview_title"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/myColorAccent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="At : "
            android:id="@+id/moviedetail_txtview_atText"
            android:textColor="@color/myColorAccent"
            android:textSize="18sp"
            android:layout_below="@id/moviedetail_txtview_title"
            android:layout_alignStart="@id/moviedetail_txtview_title"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place"
            android:id="@+id/moviedetail_txtview_place"
            android:layout_toEndOf="@id/moviedetail_txtview_atText"
            android:layout_alignTop="@id/moviedetail_txtview_atText"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description : "
            android:textColor="@color/myColorAccent"
            android:textSize="18sp"
            android:id="@+id/moviedetail_txtview_descrText"
            android:layout_below="@id/moviedetail_txtview_atText"
            android:layout_alignStart="@id/moviedetail_txtview_atText"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blah blah"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/moviedetail_txtview_description"
            android:layout_below="@id/moviedetail_txtview_descrText"
            android:layout_alignStart="@id/moviedetail_txtview_descrText"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photos : "
            android:id="@+id/moviedetail_txtview_photosTxt"
            android:textColor="@color/myColorAccent"
            android:textSize="18sp"
            android:layout_below="@id/moviedetail_txtview_description"
            android:layout_alignStart="@id/moviedetail_txtview_description"
            android:layout_marginTop="25dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/moviedetail_txtview_photosTxt"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@id/moviedetail_txtview_photosTxt">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/moviedetail_linearlayout"
                android:orientation="horizontal">
                <ImageView
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:id="@+id/moviedetail_gridlayout_imgview"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_menu_gallery"/>
            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>
</ScrollView>